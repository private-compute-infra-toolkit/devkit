set -o errexit
set -o nounset

DEVKIT="$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")"
readonly DEVKIT

readonly SCRIPTS="${DEVKIT}/../scripts"
readonly IMAGES="${DEVKIT}/../images"

source "${SCRIPTS}/lib_logging.sh"

BUILD_OUTPUT="$("${SCRIPTS}/docker/build.py" goland-ide --print-tag --search-path "${IMAGES}")"
GOLAND_IDE_IMAGE="$(echo "${BUILD_OUTPUT}" | tail -n 1)"

JETBRAINS_CONFIG_HOME="${HOME}/.config/JetBrains"
JETBRAINS_CACHE_HOME="${HOME}/.cache/JetBrains"
JETBRAINS_SHARE_LOCAL_HOME="${HOME}/.local/share/JetBrains"

mkdir -p "${JETBRAINS_CONFIG_HOME}"
mkdir -p "${JETBRAINS_CACHE_HOME}"
mkdir -p "${JETBRAINS_SHARE_LOCAL_HOME}"

DISPLAY_SOCKET="/tmp/.X11-unix"

"${SCRIPTS}/docker_run" \
  --volume="${JETBRAINS_CONFIG_HOME}:${JETBRAINS_CONFIG_HOME}" \
  --volume="${JETBRAINS_CACHE_HOME}:${JETBRAINS_CACHE_HOME}" \
  --volume="${JETBRAINS_SHARE_LOCAL_HOME}:${JETBRAINS_SHARE_LOCAL_HOME}" \
  --volume="${DISPLAY_SOCKET}:${DISPLAY_SOCKET}" \
  --env="DISPLAY" \
  "${GOLAND_IDE_IMAGE}" \
  /opt/goland/bin/goland
