set -o errexit
set -o nounset

SCRIPTS="$(dirname -- "$(readlink -f -- "${BASH_SOURCE[0]}")")"
readonly SCRIPTS

source "${SCRIPTS}/lib_logging.sh"

readonly IMAGES="${SCRIPTS}/../images"

declare -r IMAGE_NAME="$1"
shift

BUILD_CMD="${SCRIPTS}/docker/build.py ${IMAGE_NAME} --print-tag --search-path ${IMAGES} --log-file ${DEVKIT_LOG_FILE}"
readonly BUILD_CMD

IMAGE_URI="$(${BUILD_CMD})" || {
  echo "Build failed. See logs for details: ${DEVKIT_LOG_FILE}" >&2
  exit 1
}
readonly IMAGE_URI

"${SCRIPTS}/docker_run" "${IMAGE_URI}" "$@"
